<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >
        <ImageView
            app:layout_marginLeftPercent="5%"
            android:id="@+id/iv_settingBack"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/xiaoyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="4%"
            app:layout_heightPercent="4%w"/>

        <TextView
            app:layout_textSizePercent="5%w"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:text="用户信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%">



        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/lin_settingLogin"
            app:layout_marginLeftPercent="5%"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="match_parent">

        </com.zhy.android.percent.support.PercentLinearLayout>

        <ImageView
            app:layout_marginRightPercent="12%"
            app:layout_widthPercent="10%"
            app:layout_heightPercent="14%w"
            android:id="@+id/login"
            android:src="@drawable/login"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dip"
            android:layout_height="50dip" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:text="头像"
              app:layout_marginRightPercent="4%"
              android:layout_centerVertical="true"
              />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        android:id="@+id/dd"
        >

         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="昵称"
             android:id="@+id/nc"
        app:layout_marginRightPercent="4%"
        android:layout_centerVertical="true"
        />

        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="性别"
            app:layout_marginRightPercent="4%"
            android:layout_centerVertical="true"
            />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%w"
        >

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:layout_widthPercent="10%"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="14%w"
            android:src="@drawable/icon_open"
            android:id="@+id/ic"
            />
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:layout_widthPercent="10%"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="14%w"
            android:src="@drawable/report1"
            android:id="@+id/ic1"
            />
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:layout_widthPercent="10%"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="14%w"
            android:src="@drawable/copylink1"
            android:id="@+id/ic2"
            />
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:layout_widthPercent="10%"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="14%w"
            android:src="@drawable/shiled1"
            android:id="@+id/ic3"
            />
        <View
            android:background="#cccccc"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
